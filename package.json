{
  "name": "todo-project-mono",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:backend": "ts-node --project backend/tsconfig.json backend/server.ts",
    "dev:frontend": "vite",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "tsc --project backend/tsconfig.json",
    "build:frontend": "vite build",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "npm run build && node backend/dist/server.js",
    "lint": "eslint . --ext .ts,.tsx",
    "preview": "vite preview",
    "migrate": "ts-node --project backend/tsconfig.json backend/migrations/runMigrations.ts",
    "migrate:reset": "ts-node --project backend/tsconfig.json backend/migrations/runMigrations.ts --reset"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.64.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.66.9",
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.6",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
